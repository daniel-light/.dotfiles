#!/bin/sh
set -o nounset
set -o errexit

which pacman && sudo pacman -Syu
which aurget && aurget -Syu
which apt-get && sudo apt-get update && sudo apt-get upgrade -y

(upgrade-dotfiles)

(which rustup && rustup update) &
(which install-latest-ruby && install-latest-ruby; which gem && gem update && upgrade-gems-local) &
