#!/bin/sh
set -o nounset
set -o errexit

which pacman > /dev/null 2>&1 && sudo pacman -Syu
which aurget > /dev/null 2>&1 && aurget -Syu
which apt-get > /dev/null 2>&1 && sudo apt-get update && sudo apt-get upgrade -y

(upgrade-dotfiles)

(which rustup && rustup update) &
(which install-latest-ruby && install-latest-ruby; which gem && gem update && upgrade-gems-local) &
