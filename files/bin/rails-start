#!/bin/zsh

tmux new-window -d -n "dashboard-console" "bundle exec rails c"

for i in $(seq 6); do
	formatted_i="$(printf "%02d" $i)"

	tmux new-window -d -n "dashboard-server-${formatted_i}" "bundle exec rails s -p 30${formatted_i} -P tmp/pids/server-${formatted_i}.pid"
done

tmux new-window -d -n "dashboard-spork" "bundle exec spork"
tmux new-window -d -n "dashboard-konacha" "bundle exec rake konacha:serve"
