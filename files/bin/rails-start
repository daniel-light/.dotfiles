#!/bin/zsh

tmux new-window -n "dashboard-console" "bundle exec rails c"

for i in $(seq 6); do
	tmux new-window -n "dashboard-server-${i}" "bundle exec rails s -p 300${i} -P tmp/pids/server${i}.pid"
done

tmux new-window -n "dashboard-spork" "bundle exec spork"
tmux new-window -n "dashboard-konacha" "bundle exec rake konacha:serve"
