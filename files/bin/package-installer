#!/bin/sh
set -e

# brew install zsh node ctags
# gem install bundle pry rerun
# npm install -g gulp elm coffee-script coffeelint

DOT_DIR="$HOME/.dotfiles"
BUILD_DIR="$DOT_DIR/build"

cd $DOT_DIR
git submodule init
git submodule update
"$BUILD_DIR/fzf/install"
# this will action put it in bin/share/whatever, which isn't actually what we want
# PREFIX="$BIN_DIR" "$BUILD_DIR/ruby-build/install.sh"
mkdir "$HOME/.rbenv/plugins"
ln -s "$DOT_DIR/build/ruby-build" "$HOME/.rbenv/plugins/ruby-build" 

multirust > /dev/null || \
	curl -sf https://raw.githubusercontent.com/brson/multirust/master/blastoff.sh | sh

#####
# Update instructions
# git submodule update --remote
# run scripts in update
# vim-go:
#   definitely requires some set up. Not sure about updating. :GoInstall maybe does it?
