#!/bin/sh
set -e

# grab rbenv somehow
# and ctags
gem install bundle pry
npm install -g gulp elm coffee-script coffeelint

$DOT_DIR = $HOME/.dotfiles

cd $DOT_DIR
git submodule init
git submodule update
"$HOME/bin/update/command-t"
$DOT_DIR/build/fzf/install


curl -sf https://raw.githubusercontent.com/brson/multirust/master/blastoff.sh | sh

