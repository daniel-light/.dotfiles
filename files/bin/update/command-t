#!/bin/sh
set -e

# switch to the right directory (hopefully)
cd "$HOME/.vim/bundle/command-t/ruby/command-t"

### clean up step ###
# some files do get generated during make that we need to keep after, so clean
# them up before regeneration
git reset HEAD --hard
git checkout master
git fetch
git merge @{upstream}

### build step ###
ruby extconf.rb
make
